<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView

        android:id="@+id/login_imagine"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="87dp"
        android:layout_width="75dp"
        android:layout_height="75dp"/>
    <LinearLayout
        android:background="@drawable/login_input_bian"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:background="@mipmap/icon_login_phone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="14dp"
            android:layout_height="19dp"/>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_E1E1E1"
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="20dp"/>
        <EditText
            android:id="@+id/et_phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textColorHint="@color/color_E1E1E1"
            android:layout_marginLeft="10dp"
            android:hint="输入账号"
            android:background="@drawable/login_et_bian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:background="@drawable/login_input_bian"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginRight="10dp"
            android:background="@mipmap/icon_login_pwd"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="14dp"
            android:layout_height="19dp"/>
        <View
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="20dp"/>
        <EditText
            android:id="@+id/et_pwd"
            android:textSize="15sp"
            android:maxLength="11"
            android:singleLine="true"
            android:inputType="textPassword"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:hint="输入密码"
            android:textColorHint="@color/color_E1E1E1"
            android:background="@drawable/login_et_bian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_forget_pwd"
            android:visibility="gone"
            android:textColor="#ff777777"
            android:textSize="15sp"
            android:text="forget password?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/tv_register"
            android:textColor="@color/main_color"
            android:text="注册"
            android:textSize="15sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_login"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@mipmap/btn_login_blue"
        android:textColor="@color/white"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
</LinearLayout>